<% unless current_user %>
  <div class="card take_survey_card_border" align="center">
	  <%= link_to "Haven't signed up yet?", home_path, class: "top_right_link" if invited? %>

	  <%= form_tag sessions_path do %>
      <p>
	      <%= text_field_tag :login, nil, placeholder: "Username", class: :surveys_text_field, id: :login_field_1 %>
	      <%= password_field_tag :password, nil, placeholder: "Passphrase", class: :surveys_text_field, id: :login_field_2 %>
	    </p>
	    <p>
        <button type="submit" name="commit" class="surveys_form_button">
          <b>Log in <i class="fa fa-pencil"></i></b>
        </button>
      </p>

		  <div id="remember_me_check_box">
			  Remember me <%= check_box_tag :remember_me, 1, params[:remember_me] %>
		  </div>
	  <% end %>
	</div>
<% else %>
  <div class="card" align="center">
    <p>
      You are already logged in.
    </p>
  </div>
<% end %>
