<% if @items_size > @items.size %>
  <div id="load_more_items_anchor"></div>
  <div class="card" align="center" id="load_more_items_link">
    <p>
      <%= link_to "Load more posts...", load_more_items_path(token: user.unique_token), remote: true %>
    </p>
  </div>

  <%= audio_tag "effects/bumerang.wav", id: "more_content_sound" %>

  <script>
    var link = $("#load_more_posts_link");
    link.click(function(){
      link.toggle();
      $("#load_bar").toggle();
    })
  </script>
<% end %>
