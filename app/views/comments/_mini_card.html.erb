<div class="mini_comment_card">
  <%= render "users/mini_avatar", item: comment %>

  <span class="mini_comment_body">
    <%= render "app/body", item: comment %>
  </span>

  <% if comment.image_url %>
    <% unless @comment_shown %>
      <%= link_to comment do %>
        <%= image_tag comment.image_url, class: :mini_comment_image %>
      <% end %>
    <% else %>
      <%= image_tag comment.image_url, class: :mini_comment_image %>
    <% end %>
  <% end %>
</div>
