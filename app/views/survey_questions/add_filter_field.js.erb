// renders filter field
$(
  <% case survey_question_section_type @question %>
  <% when :open_ended %>
    "#open_ended_section"
  <% when :checkbox %>
    "#checkbox_section"
  <% when :radio_button %>
    "#radio_button_section"
  <% when :grid %>
    "#grid_question_section"
  <% end %>

).append("<%=j render 'survey_results/filter_field' %>");

// removes selected filter field from options
$('.survey_question_field_select option[value="' + "<%= @question.id %>" + '"]').toggle();
// resets select box back to default
$("#survey_question_field_select").val("");
// always re disables link after adding field to form
$("#add_filter_field_link").toggleClass('disabled_link', true);

window.navigator.vibrate(1);
